<% include partials/header2.ejs %>

<script>
        window.history.pushState("", "", '/teacher');
</script>
<div class="container">
    <% if (message != '') { %>
    <p class="text-center text-danger"><%= message %></p>
    <% } %>
    <form class="add-teacher-form" action="" method="post" enctype="multipart/form-data">
        <!-- <div class="form-row"> -->
        <div class="form-group col-md-6">
            <select id="teacher" name="teacher" class="form-control" required>
                <!-- <optgroup label="Select Table"> -->
                <option value="">اختر المعلم</option>
                <% teachers.forEach((t, index) => { %>
                <option value="<%= t.name %>"><%= t.name %></option>
                <% }) %>
            </select>
        </div>

        <div class="form-group col-md-6">
            <select id="year" name="year" class="form-control" required>
                <!-- <optgroup label="Select Table"> -->
                <option value="">اختر السنة</option>
                <option value="اولي">اولي</option>
                <option value="تانيه">تانيه</option>
                <option value="تالته">تالته</option>
                <% if (position === 'أبتدائي') { %>
                <option value="رابعه">رابعه</option>
                <option value="خامسه">خامسه</option>
                <option value="سادسه">سادسه</option>
                <% } %>
            </select>
        </div>

        <div class="form-group col-md-6">
            <select id="type" name="type" class="form-control" required>
                <!-- <optgroup label="Select Table"> -->
                <option value="">اختر النوع</option>
                <option value="بنين">بنين</option>
                <option value="بنات">بنات</option>
            </select>
        </div>
        <!-- </div> -->
        <div class="form-group col-md-4">
            <input type="text" class="form-control" name="Stage" id="stage" value="<%= position %>" hidden>
        </div>
        <button type="submit" class="btn btn-primary float-right">التالي</button>
    </form>
</div>
</div>
</body>

</html>